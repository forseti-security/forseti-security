<!doctype html>
<html>
<body>
    Timestamp: {{ snapshot_timestamp }}; {{ snapshot_time }}<br>
    Status Summary: {{ status_summary }}<br>
    <br>
    <table>
        <col width="250">
        <col width="150">
        <col width="150">
        <tr>
            <th align="left">Resource Name</th>
            <th align="left">Status</th>
            <th align="left"># in Snapshot</th>
        </tr>
        {% for pipeline in pipelines %}
        <tr>
            <td>{{ pipeline.RESOURCE_NAME }}</td>
            <td>{{ pipeline.status }}</td>
            {% if pipeline.count is not none %}
              <td>{{ pipeline.count }}</td>
            {% else %}
              <td>Unknown</td>
            {% endif %}
        </tr>
        {% endfor %}
    </table>
</body>
</html>
