<html>
<head>
<style>
* {
  font-family: Arial, Helvetica, sans-serif;
  line-height: 16px;
}

a, a:visited {
  color: #1082d9;
}

.resource-violations tr > td {
  border: 1px solid #ddd;
  border: 1px solid #ddd;
  border-top: 0;
  border-bottom: 0;
  font-size: 14px;
  padding: 4px;
}

th {
  font-size: 16px;
  font-weight: bold;
  padding: 4px;
  text-align: left;
}

td {
  padding: 4px;
}

</style>
</head>
<body style="background-color: #eee;">
<div style="background-color: #fff; margin-top: 40px; padding: 20px; margin-left: 20%; margin-right: 20%;">
  <div style="margin: 10px 10px 15px 10px; font-size: 14px;">
    Forseti Security found {% if total_violations %} some {% else %} no {% endif %} scanner rule violations on {{ scan_date }}.
  </div>
  <div style="margin: 10px 10px 15px 10px; font-size: 14px;">
    <div>
      <span style="font-weight: bold;">New Violations:</span> {{ total_new_violations }}
    </div>
    <div>
      <span style="font-weight: bold;">Total Violations:</span> {{ total_violations }}
    </div>
  </div>
  <div style="margin: 10px 10px;">
    <div style="font-weight: bold; font-size: 16px; margin-bottom: 5px;">
      Resource Violations:
    </div>
    <div style="font-size: 14px;">
    {% for (resource_type, summary) in resource_summaries.iteritems() %}
    <div>{{ summary['pluralized_resource_type'] }}:
         {{ summary['violations']|length }}
         of
         {{ summary['total'] }}
    </div>
    {% endfor %}
    </div>
    <div style="margin: 10px 0;">
      <div style="font-size: 14px;">
          <strong>Errors:</strong> {{ violation_errors|length }}
      </div>
    </div>
    {% if total_violations %}
    <div style="font-style: italic; font-size: 14px; margin-bottom: 5px;">
      See attached CSV for full violation details.
    </div>
     {% endif %}
  </div>

  <br/>

  <div>
    {% for (resource_type, summary) in resource_summaries.iteritems() %}
    <div style="margin: 20px 10px;">
      <table style="border-collapse: collapse; border-spacing: 0;" width="100%">
        <tr>
          <th style="border-bottom: 1px solid #ddd; width: 40%;">
            {{ resource_type.title() }}
          </th>
          <th style="border-bottom: 1px solid #ddd; width: 40%;">
            # Total
          </th>
          <th style="border-bottom: 1px solid #ddd; width: 40%;">
            # New
          </th>
        </tr>
        {% for resource_id, counts in summary['violations'].iteritems() %}
        <tr>
          <td style="padding: 4px;">{{ resource_id }}</td>
          <td style="padding: 4px;">{{ counts['total'] }}</td>
          <td style="padding: 4px;">{{ counts['new'] }}</td>
        </tr>
        {% endfor %}
      </table>
    </div>
    {% endfor %}
  </div>
</div>

</body>
</html>
